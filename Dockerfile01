FROM alpine:3.16.0

ENV api_id=4627680  
ENV api_hash=be174323fb7b611dbc180526a69743ef
ENV token=5056228292:AAG8roof17sl5EDYUq0by0FzSb_wpl4lB4I
ENV channel_files_chat_id=-1001585323643
